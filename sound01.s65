.include "common.inc"

;---------------------------------------------------------------------
.segment "ZP" : zeropage
;---------------------------------------------------------------------

sound_started: .res 1
sound_stopped: .res 1

;---------------------------------------------------------------------
.segment "CODE"
;---------------------------------------------------------------------

RESET: ; {{{
        sei
        cld

        ldx     #$FF
        txs

        lda     #0
        sta     PPU_CTRL        ; NMI 無効
        sta     PPU_MASK        ; 描画無効
        sta     APU_DMC         ; DMC IRQ 無効

        jsr     InitSound
        jsr     EnableNMI

@loop:
        jmp     @loop
; }}}

InitSound: ; {{{
        lda     #APU_FRAME_STEP4
        sta     APU_FRAME

        lda     #APU_STATUS_SQ1 | APU_STATUS_SQ2 | APU_STATUS_TRI | APU_STATUS_NOI
        sta     APU_STATUS

        lda     #0
        sta     sound_started
        sta     sound_stopped

        rts
; }}}

EnableNMI: ; {{{
        bit     PPU_STATUS
@wait_vblank_1:
        bit     PPU_STATUS
        bpl     @wait_vblank_1
@wait_vblank_2:
        bit     PPU_STATUS
        bpl     @wait_vblank_2

        lda     #PPU_CTRL_NMI_ENABLE
        sta     PPU_CTRL

        rts
; }}}

NMI: ; {{{
        pha
        txa
        pha
        tya
        pha

        jsr     SoundTick

        pla
        tay
        pla
        tax
        pla

        rti
; }}}

SoundTick: ; {{{
        lda     sound_stopped
        beq     @tick
        rts

@tick:
        lda     sound_started
        bne     @update_sound

@start_sound:
        lda     #1
        sta     sound_started
        jmp     SoundStart

@update_sound:
        jmp     SoundUpdate
; }}}

SoundStop: ; {{{
        lda     #1
        sta     sound_stopped

        rts
; }}}

SoundStart: ; {{{
        lda     #APU_SQ_VOLUME_ENVELOPE(2) | APU_SQ_DUTY_QUARTER
        sta     APU_SQ2
        lda     #0
        sta     APU_SQ2+1
        lda     #<160
        sta     APU_SQ2+2
        lda     #>160 | APU_SQ_LENGTH_COUNTER_LOAD(1)
        sta     APU_SQ2+3

        jmp     SoundStop
; }}}

SoundUpdate: ; {{{
        rts
; }}}

IRQ: ; {{{
        .byte   $02     ; kil
; }}}
